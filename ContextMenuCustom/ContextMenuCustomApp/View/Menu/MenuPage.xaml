<Page x:Class="ContextMenuCustomApp.View.Menu.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
      d:Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
      d:Height="400"
      d:Width="600"
      muxc:BackdropMaterial.ApplyToRootOrPageBackground="True"
      DataContext="{x:Bind _viewModel}"
      mc:Ignorable="d">
    <Grid HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
            <RowDefinition Height="32" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="4" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border Grid.RowSpan="3"
                Grid.Column="1"
                Width="1"
                Margin="0,4"
                Background="Gray"
                Opacity="0.2" />
        <ListView x:Name="CommandList"
                  Grid.Row="1"
                  Grid.Column="0"
                  Margin="4"
                  ItemsSource="{Binding MenuItems}"
                  SelectionMode="Single">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Title}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <ScrollViewer Grid.Row="1"
                      Grid.Column="2"
                      Margin="4"
                      DataContext="{Binding SelectedItem, ElementName=CommandList}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="64" />
                </Grid.ColumnDefinitions>
                <TextBox Grid.Row="0"
                         Grid.Column="0"
                         Grid.ColumnSpan="2"
                         Header="Title"
                         PlaceholderText="open with notepad"
                         Text="{Binding Title, Mode=TwoWay}" />
                <TextBox Grid.Row="1"
                         Grid.Column="0"
                         Margin="0,8,0,0"
                         Header="Exe"
                         PlaceholderText="&quot;C:\Windows\notepad.exe&quot;"
                         Text="{Binding Exe, Mode=TwoWay}" />
                <Button x:Name="OpenExeButton"
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="4,0,0,-1"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Bottom"
                        Click="OpenExeButton_OnClick"
                        ToolTipService.ToolTip="Open">
                    <SymbolIcon Symbol="OpenFile" />
                    <!--  TODO Margin  -->
                </Button>
                <TextBox Grid.Row="2"
                         Grid.Column="0"
                         Grid.ColumnSpan="2"
                         Margin="0,8,0,0"
                         Header="Param"
                         PlaceholderText="&quot;{path}&quot;"
                         Text="{Binding Param, Mode=TwoWay}" />
                <TextBox Grid.Row="3"
                         Grid.Column="0"
                         Grid.ColumnSpan="2"
                         Margin="0,8,0,0"
                         Header="Icon"
                         PlaceholderText="&quot;c:\some\icon.icon&quot;"
                         Text="{Binding Icon, Mode=TwoWay}" />
                <TextBox Grid.Row="4"
                         Grid.Column="0"
                         Grid.ColumnSpan="2"
                         Margin="0,8,0,0"
                         Header="Match Extensions"
                         PlaceholderText="&quot;.txt .zip&quot; or *"
                         Text="{Binding AcceptExts, Mode=TwoWay}" />
                <Grid Grid.Row="5"
                              Grid.Column="0"
                              Grid.ColumnSpan="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <ToggleSwitch Grid.Column="0"
                              Margin="0,8,0,0"
                              Header="Match Folder"
                              IsOn="{Binding AcceptDirectory, Mode=TwoWay}" />
                    <ToggleSwitch Grid.Column="1"
                              Margin="0,8,0,0"
                              Header="Accept Multiple files"
                              IsOn="{Binding AcceptMultiFiles, Mode=TwoWay}" />

                </Grid>
            </Grid>
        </ScrollViewer>
        <StackPanel Grid.Row="0"
                    Grid.Column="0"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">

            <Button Margin="4,0"
                    Padding="4"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Click="Add_Click"
                    ToolTipService.ToolTip="Add a menu">
                <SymbolIcon Symbol="Add" />
            </Button>
            <Button Margin="4,0"
                    Padding="4"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Click="Refresh_Click"
                    ToolTipService.ToolTip="Refresh menus">
                <SymbolIcon Symbol="Refresh" />
            </Button>
            <Button Margin="4,0"
                    Padding="4"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Click="Open_Folder_Click"
                    ToolTipService.ToolTip="Open menus folder">
                <SymbolIcon Symbol="Folder" />
            </Button>
        </StackPanel>
        <StackPanel Grid.Row="0"
                    Grid.Column="2"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">


            <Button Margin="4,0"
                    Padding="4"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Click="Save_Click"
                    ToolTipService.ToolTip="Save menu">
                <SymbolIcon Symbol="Save" />
            </Button>

            <Button Margin="4,0"
                    Padding="4"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Click="Delete_Click"
                    ToolTipService.ToolTip="Delete menu">
                <SymbolIcon Symbol="Delete" />
            </Button>

            <Button Margin="4,0"
                    Padding="4"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Click="Open_Click"
                    ToolTipService.ToolTip="Open menu file">
                <SymbolIcon Symbol="OpenFile" />
            </Button>
        </StackPanel>
        <StackPanel Grid.Row="2"
                    Grid.Column="0"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
            <TextBlock VerticalAlignment="Center"
                       TextLineBounds="Full">
                Cache:
            </TextBlock>
            <muxc:TeachingTip x:Name="CacheTip"
                              Title="About Cache:"
                              CloseButtonContent="Got it!"
                              IsLightDismissEnabled="True"
                              PlacementMargin="4"
                              PreferredPlacement="Auto"
                              Target="{x:Bind BuildCacheButton}">
                <muxc:TeachingTip.Content>
                    <TextBlock>
                        <Run>Preprocess the menu files to cache</Run>
                        <LineBreak />
                        <Run>This can optimize the menu display speed</Run>
                        <LineBreak />
                        <Run Foreground="Red">Rebuild after modifying the menu !</Run>
                        <LineBreak />
                        <LineBreak />
                        <Run Text="Click clear button right to disable cache" />
                        <LineBreak />
                        <LineBreak />
                        <Run>Cache Time:</Run>
                        <LineBreak />
                        <Run Text="{Binding CacheTime}" />
                    </TextBlock>
                </muxc:TeachingTip.Content>

            </muxc:TeachingTip>
            <Button x:Name="BuildCacheTipButton"
                    Margin="4,0"
                    Padding="4"
                    VerticalAlignment="Center"
                    Background="{x:Null}"
                    BorderThickness="0"
                    Click="BuildCacheTipButton_Click">
                <SymbolIcon Symbol="Help" />
            </Button>
            <Button x:Name="BuildCacheButton"
                    Margin="4,0"
                    Padding="4"
                    VerticalAlignment="Center"
                    Click="{x:Bind _viewModel.Build}"
                    ToolTipService.ToolTip="Preprocess menus to cache">
                <SymbolIcon Symbol="Sync" />
            </Button>
            <Button Margin="4,0"
                    Padding="4"
                    VerticalAlignment="Center"
                    Click="{x:Bind _viewModel.ClearCache}"
                    ToolTipService.ToolTip="Clear menus cache">
                <SymbolIcon Symbol="Clear" />
            </Button>
        </StackPanel>
        <StackPanel Grid.Row="2"
                    Grid.Column="1"
                    Grid.ColumnSpan="2"
                    Margin="04,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Orientation="Horizontal">

            <HyperlinkButton Margin="4,0"
                             Padding="4"
                             NavigateUri="https://github.com/ikas-mc/ContextMenuForWindows11/issues/2">
                <TextBlock>
                    <Run>Help</Run>
                </TextBlock>
            </HyperlinkButton>

            <HyperlinkButton Margin="4,0"
                             Padding="4"
                             NavigateUri="https://github.com/ikas-mc/ContextMenuForWindows11">
                <TextBlock>
                    <Run Text="{x:Bind _viewModel.Version()}" />
                    <Run>ikas</Run>
                </TextBlock>
            </HyperlinkButton>
            <Button Padding="4">
                <Button.Flyout>
                    <Flyout>
                        <StackPanel MinWidth="320"
                                    MinHeight="120">
                            <TextBox Header="Custom Menu Title"
                                     Text="{x:Bind _viewModel.GetCustomMenuName(), BindBack=_viewModel.SetCustomMenuName, Mode=TwoWay}" />
                        </StackPanel>
                    </Flyout>
                </Button.Flyout>
                <SymbolIcon Symbol="Setting" />
            </Button>
        </StackPanel>
    </Grid>

</Page>